    "test": "mocha  --config .mocharc.json",
    "test-and-show": "../../scripts/test-and-show.sh swap-test.log",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,md}\"",
    "types": "tsc --noEmit"
