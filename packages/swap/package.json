{
  "name": "@bitcoin-computer/swap",
  "version": "0.23.0-beta.0",
  "description": "Minimalistic boilerplate to quick-start Bitcoin Computer development.",
  "license": "MIT",
  "author": "Clemens Ley <clemens@bitcoincomputer.io>",
  "type": "module",
  "main": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "rm -rf build && tsc -p tsconfig.release.json",
    "build:turbo": "turbo run build",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,md}\"",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern build/",
    "lint:fix": "eslint --fix . --ext .ts,.tsx --ignore-pattern build/",
    "start": "node build/src/main.js",
    "test": "mocha --config .mocharc.json",
    "test:show": "npm run test 2>&1 | tee swap.log && open swap.log",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@bitcoin-computer/TBC20": "^0.23.0-beta.0",
    "@bitcoin-computer/TBC721": "^0.23.0-beta.0",
    "@bitcoin-computer/lib": "^0.23.0-beta.0",
    "@bitcoin-computer/nakamotojs": "^0.23.0-beta.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "~20.11.21",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "chai": "^5.1.0",
    "chai-match-pattern": "^1.3.0",
    "dotenv": "^16.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.8.1",
    "tsutils": "~3.21.0",
    "typescript": "~5.3.3"
  },
  "volta": {
    "node": "16.13.0"
  },
  "gitHead": "af40117bcb9616e631910f68c3b617aef629f027"
}
