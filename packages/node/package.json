{
  "name": "@bitcoin-computer/node",
  "version": "0.23.0-beta.0",
  "private": false,
  "description": "Server Side Library for the Bitcoin Computer",
  "keywords": [
    "Bitcoin",
    "Litecoin",
    "Dogecoin",
    "Pepecoin",
    "Smart Contracts",
    "Javascript"
  ],
  "homepage": "http://bitcoincomputer.io/",
  "bugs": {
    "url": "https://github.com/bitcoin-computer/monorepo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitcoin-computer/monorepo/tree/main/packages/node"
  },
  "license": "CC-BY-ND-4.0",
  "author": {
    "name": "Clemens Ley",
    "email": "clemens@bitcoincomputer.io"
  },
  "contributors": [
    "Clemens Ley",
    "Laura Tardivo",
    "Vivek Singh"
  ],
  "type": "module",
  "main": "dist/bcn.es.mjs",
  "scripts": {
    "build": "cd ../../ && npm run build:node",
    "clean": "npm run down && npm run prune && npm run clean:blockchain:data && npm run clean:db:data",
    "clean:blockchain:data": "rm -rf chain-setup/*/*/blockchain-data",
    "clean:db:data": "rm -rf chain-setup/*/*/db-data",
    "clean:logs": "rm -f *.log 2> /dev/null",
    "down": "docker compose -f docker-compose.yml down",
    "fund": "node --loader ts-node/esm ./scripts/fund.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prune": "docker system prune -f",
    "setup": "./scripts/setup.py",
    "start": "npm run up",
    "start:bcn": "node dist/bcn.es.mjs",
    "start:sync": "node dist/bcn.sync.es.mjs",
    "test": "mocha --config .mocharc.json",
    "test:show": "npm run test 2>&1 | tee node-test.log && open node-test.log",
    "up": "docker compose -f docker-compose.yml up"
  },
  "dependencies": {
    "@babel/core": "^7.23.9",
    "@bitcoin-computer/lib": "^0.23.0-beta.0",
    "@bitcoin-computer/nakamotojs": "^0.23.0-beta.0",
    "@bitcoin-computer/secp256k1": "^0.23.0-beta.0",
    "@types/node": "^20.11.20",
    "axios": "1.7.9",
    "bitcoind-rpc": "^0.9.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ecpair": "^2.1.0",
    "elliptic": "^6.5.4",
    "exponential-backoff": "^3.1.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "geoip-lite": "^1.4.10",
    "hash.js": "^1.1.7",
    "pg-monitor": "^2.0.0",
    "pg-promise": "^11.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zeromq": "6.3.0"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.6",
    "chai": "^5.1.0",
    "mocha": "^10.3.0"
  },
  "engines": {
    "node": ">=16"
  },
  "gitHead": "af40117bcb9616e631910f68c3b617aef629f027"
}
