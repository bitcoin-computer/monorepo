{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "build",
    "lib": ["esnext", "DOM"]
  },
  "include": ["src/**/*", "test/**/*"]
}
