{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "DOM"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
