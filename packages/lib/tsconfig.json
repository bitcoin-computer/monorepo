{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNEXT",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["esnext", "DOM"],
    "types": ["./chai.local.d.ts", "mocha"],
    "sourceMap": true,
    "outDir": "js-build",
    "baseUrl": ".",
    "strict": true,
    "strictPropertyInitialization": false
  },
  "include": ["test/**/*", "src/**/*"],
  "exclude": ["node_modules", "js-build"]
}
